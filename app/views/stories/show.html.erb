<div class="container">
  <div class="row">
    <div class="col s2 offset-s5">
      <ul class="pagination">
          <% if @story.id != 1 %>
          <li><a href="/stories/<%= @story.id - 1 %>"><i class="material-icons">chevron_left</i></a></li>
          <% end %>
          <% if @story.id != Story.count %>
          <li><a href="/stories/<%= @story.id + 1 %>"><i class="material-icons">chevron_right</i></a></li>
          <% end %>
        </ul>
    </div>

    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s4 offset-s2"><a href="#narrative">Narrative</a></li>
        <li class="tab col s4"><a href="#fragments">Fragments</a></li>
      </ul>
    </div>

    <div id="narrative" class="col s8 offset-s2">
      <h2>Title: <%= @story.title %></h2>
      <% @parts.each do |part| %>
        <%= part.body %>
      <% end %>
      <% if current_user == nil %>
      <p><a href="/login">Log In</a> or <a href="/signup">Sign up</a> to contribute to this story</p>
      <% elsif @parts.length < 10 && @parts.last.user_id != current_user.id %>
      <form action="/stories/<%= @story.id %>" method="post">
        <input type="hidden" name="_method" value="patch">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input name="body" type="text">
        <span>140 characters</span>
        <button class="btn waves-effect waves-light">Submit</button>
      </form>
      <% end %>
    </div>

    <div id="fragments" class="col s8 offset-s2">
      <h2>Title: <%= @story.title %></h2>
      <ul class="collection">
        <% @parts.each do |part| %>
        <li class="collection-item avatar">
          <a href="/users/<%= part.user_id %>"><img src="http://placehold.it/50x50" class="circle"></a>
          <p><%= part.body %></p>
          <a class="username-link" href="#"><%= User.find(part.user_id).name %></a>
          <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
        </li>
        <% end %>
      </ul>
      <% if current_user == nil %>
      <p><a href="/login">Log In</a> or <a href="/signup">Sign up</a> to contribute to this story</p>
      <% elsif @parts.length < 10 && @parts.last.user_id != current_user.id %>
      <form action="/stories/<%= @story.id %>" method="post">
        <input type="hidden" name="_method" value="patch">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input name="body" type="text">
        <span>140 characters</span>
        <button class="btn waves-effect waves-light">Submit</button>
      </form>
      <% end %>
    </div>

  </div>


</div>
